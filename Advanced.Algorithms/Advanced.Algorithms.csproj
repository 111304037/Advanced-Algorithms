<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40;netstandard1.0</TargetFrameworks>
    <RootNamespace>Advanced.Algorithms</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>StrongNameKey.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Binary\**" />
    <Compile Remove="DynamicProgramming\**" />
    <EmbeddedResource Remove="Binary\**" />
    <EmbeddedResource Remove="DynamicProgramming\**" />
    <None Remove="Binary\**" />
    <None Remove="DynamicProgramming\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Miscellaneous\BalanceParentheses.cs" />
    <Compile Remove="Miscellaneous\CountInversions.cs" />
    <Compile Remove="Sorting\ZigZagOrderer.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Binary\BaseConversion.cs" />
    <Compile Include="Binary\BitHacks.cs" />
    <Compile Include="Binary\Logarithm.cs" />
    <Compile Include="Binary\DivisionModulus.cs" />
    <Compile Include="Binary\GCD.cs" />
    <Compile Include="Binary\IntToBinary.cs" />
    <Compile Include="Binary\IsMultipleOfNine.cs" />
    <Compile Include="Binary\IsMultipleOfThree.cs" />
    <Compile Include="Binary\NextPowOfTwo.cs" />
    <Compile Include="Binary\ToggleCase.cs" />
  </ItemGroup>

</Project>